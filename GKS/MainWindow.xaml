<Window x:Class="GKS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GKS"
        mc:Ignorable="d"
        Title="MainWindow" Height="290" Width="650"
        MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="60" MinHeight="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" MinWidth="165"/>
            <ColumnDefinition Width="*" MinWidth="35"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="10 5 5 5">
            Введите количество строк
        </TextBlock>
        <TextBox MaxWidth="40" MinWidth="20" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left"
                 Margin="10,30,0,10" Width="30" x:Name="tbCntFields">5</TextBox>
        <Button Content="Подтвердить" Margin="51,30,0,10" HorizontalAlignment="Left" 
                Grid.Column="0" Grid.Row="0" Width="106" Click="DrawNewFields"/>


        <Button Grid.Column="1" Grid.Row="0" Content="Посчитать матрицу" Margin="10"
                Click="Calc"/>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="10 0 0 0">
                    Заполните поля значениями через " ".
                    <LineBreak/>
                    Используйте только латиницу и большие буквы.
        </TextBlock>
        <GroupBox Grid.Row="1" Grid.ColumnSpan="2" Header="Ввод операций" Margin="0 30 0 0" x:Name="gbValue">
            <StackPanel x:Name="spValue">
                <TextBox Margin="5">
                    T1 T2 C1 C2
                </TextBox>
                <TextBox Margin="5">
                    T1 T3 T4 P1 C1
                </TextBox>
                <TextBox Margin="5">
                    T1 T3 P1 F1
                </TextBox>
                <TextBox Margin="5">
                    T1 T3 T2 T4
                </TextBox>
                <TextBox Margin="5">
                    T1 T3 T4
                </TextBox>
            </StackPanel>
        </GroupBox>
        <ScrollViewer Grid.Column="2" Grid.RowSpan="2">
            <TextBlock  Padding="20" x:Name="tbOut">

            </TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
